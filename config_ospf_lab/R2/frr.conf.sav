frr version 8.1
frr defaults traditional
hostname R2
service integrated-vtysh-config
!
interface eth0
 ip address 10.12.1.1/24
 ip ospf area 2
exit
!
interface eth1
 ip address 10.10.1.2/24
exit
!
interface eth2
 ip address 10.10.3.2/24
exit
!
interface lo
 ip address 192.168.1.2/32
exit
!
router bgp 200
 bgp router-id 2.2.2.3
 no bgp ebgp-requires-policy
 neighbor 10.10.1.1 remote-as 100
 neighbor 10.10.1.1 update-source lo
 neighbor 10.10.3.1 remote-as 300
 neighbor 10.10.3.1 update-source lo
 !
 address-family ipv4 unicast
  network 10.10.1.0/24
  network 10.10.3.0/24
  network 10.12.1.0/24
 exit-address-family
exit
!
router ospf
 ospf router-id 2.2.2.3
exit
!
